<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_padding_margin">

    <android.support.v7.widget.CardView
        android:id="@+id/crd_fa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/material_elevation_card"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        >

        <LinearLayout
            android:layout_marginLeft="@dimen/default_padding_margin_large"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/followerIcon"
                android:layout_width="@dimen/default_icon_size_large"
                android:layout_height="@dimen/default_icon_size_large" />

            <TextView
                android:id="@+id/followerName"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingLeft="@dimen/default_padding_margin"
                android:paddingRight="@dimen/default_padding_margin"
                android:textSize="@dimen/material_text_title_medium"
                android:fontFamily="monospace"
                android:textColor="@color/md_text_color_title_light_theme"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>