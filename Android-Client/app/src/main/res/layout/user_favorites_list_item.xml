<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="3dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/post_user_item2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:padding="3dp"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/ic_launcher"
                android:contentDescription="TODO" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/wallet_dim_foreground_inverse_disabled_holo_dark">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/icon_user_item2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="18dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="13dp"
                    app:srcCompat="@mipmap/ic_launcher"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/WhiteColor"/>

                <TextView
                    android:id="@+id/nick_user_item2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/icon_user_item2"
                    android:layout_toEndOf="@+id/icon_user_item2"
                    android:layout_toRightOf="@+id/icon_user_item2"
                    android:paddingLeft="8dp"
                    android:paddingRight="@dimen/default_padding_margin"
                    android:paddingTop="4dp"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/date_user_item2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nick_user_item2"
                    android:layout_toEndOf="@+id/icon_user_item2"
                    android:layout_toRightOf="@+id/icon_user_item2"
                    android:paddingLeft="8dp"
                    android:paddingRight="@dimen/default_padding_margin"
                    android:paddingTop="4dp"
                    android:textColor="@android:color/white"/>

                <Spinner
                    android:id="@+id/spinMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/nick_user_item2"
                    android:background="@drawable/zzz_dots_vertical"
                    android:backgroundTint="@android:color/white" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
