    <android.support.design.widget.TextInputLayout
        android:id="@+id/tl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        app:counterEnabled="true"
        app:counterOverflowTextAppearance="@color/colorAccent"
        app:counterMaxLength="50"
        android:requiresFadingEdge="vertical">

        <EditText
            android:id="@+id/userNameField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Полное имя"
            android:inputType="textPersonName"
            android:maxLength="50" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tl5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tl4"
        android:layout_alignLeft="@+id/tl4"
        android:layout_alignStart="@+id/tl4"
        app:counterEnabled="true"
        app:counterOverflowTextAppearance="@color/colorAccent"
        app:counterMaxLength="100"
        android:requiresFadingEdge="vertical">

        <com.example.user.dipl1.custom_ui.CustomEditText
            android:id="@+id/userAdrText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_menu_myplaces"
            android:drawableTint="@android:color/black"
            android:ems="10"
            android:hint="Адрес"
            android:inputType="textPersonName"
            android:maxLength="100"
            android:clickable="true"
            android:focusable="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tl6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterOverflowTextAppearance="@color/colorAccent"
        app:counterMaxLength="20"
        android:layout_alignLeft="@+id/tl4"
        android:layout_alignStart="@+id/tl4"
        android:layout_below="@+id/tl5"
        android:hint="Номер телефона">

        <EditText
            android:id="@+id/mobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="20"
            android:inputType="phone"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tl4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        app:counterEnabled="true"
        app:counterOverflowTextAppearance="@color/colorAccent"
        app:counterMaxLength="40"
        android:requiresFadingEdge="vertical">

        <EditText
            android:id="@+id/userEmailField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:maxLength="40" />
    </android.support.design.widget.TextInputLayout>

   <!-- <android.support.design.widget.TextInputLayout
        android:id="@+id/tl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tl2"
        android:layout_alignLeft="@+id/tl2"
        android:layout_alignStart="@+id/tl2"
        app:counterEnabled="true"
        app:counterOverflowTextAppearance="@color/colorAccent"
        app:counterMaxLength="30"
        android:requiresFadingEdge="vertical">

        <EditText
            android:id="@+id/userFathernameField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Отчество"
            android:inputType="textPersonName"
            android:maxLength="30" />
    </android.support.design.widget.TextInputLayout>-->

    <LinearLayout
        android:id="@+id/ln1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/tl6"
        android:layout_alignLeft="@id/tl5"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/iconsColor"
            android:textSize="24sp"
            android:text="Привязки к социальным сетям" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/fcbConnectBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Привязать аккаунт к Facebook"
            android:layout_marginTop="10dp"/>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/gglConnectBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="Привязать аккаунт к Google"
            android:layout_marginTop="5dp"></com.google.android.gms.common.SignInButton>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/profDataPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tl5"
        android:layout_below="@+id/ln1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/iconsColor"
            android:textSize="24sp"
            android:text="Профессиональные данные" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Специальность"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/specialField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/fileUnloadBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zzz_file_send"
                android:contentDescription="TODO" />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Загрузить изображение, подтверждающее Ваше участие в сфере здравоохранения"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
